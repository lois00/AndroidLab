<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/aty_main_lab3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:text="请点击下列按钮查看三种UI实验结果："
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/tvResult"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="自定义AlertDialog"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnCustomAlertDialog"
        android:layout_below="@+id/btnSimpleAdapterList"
        android:layout_alignLeft="@+id/btnXMLMenu"
        android:layout_alignStart="@+id/btnXMLMenu"
        android:layout_marginTop="20dp" />

    <Button
        android:text="使用XML定义菜单"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnXMLMenu"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/btnCustomAlertDialog"
        android:layout_alignLeft="@+id/btnSimpleAdapterList"
        android:layout_alignStart="@+id/btnSimpleAdapterList" />

    <Button
        android:text="ActionMode上下文菜单"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:id="@+id/btnActionModeMenu"
        android:layout_below="@+id/btnXMLMenu"
        android:layout_alignLeft="@+id/btnXMLMenu"
        android:layout_alignStart="@+id/btnXMLMenu" />

    <Button
        android:text="SimpleAdapter实现ListView"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnSimpleAdapterList"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/tvResult"
        android:layout_alignRight="@+id/tvResult"
        android:layout_alignEnd="@+id/tvResult"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp" />

</RelativeLayout>
